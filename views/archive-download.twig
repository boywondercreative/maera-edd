{% extends "base.twig" %}

{% block content %}

	<div class="content-wrapper">

		{% include ['filter-'~theme_mods.filter_mode~'.twig', 'filter-php.twig'] %}

		<article {{ function( 'post_class' ) }} id="tease-{{ post.ID }}" itemscope itemtype="http://schema.org/WebPage">

			{% include 'single-title.twig' %}

			{{ shell.clearfix }}
			{% do action( 'maera/page/pre_content' ) %}
			{{ post.content }}
			{% filter shortcodes %}[downloads columns="2"]{% endfilter %}
			{{ shell.clearfix }}
			{{ function( 'wp_link_pages', {
				'before': '<div class="page-links">' . i18n.pages,
				'after': '</div>'
			}) }}
			{{ shell.clearfix }}
			{% do action( 'maera/page/after_content' ) %}

		</article>

	</div> <!-- /content-wrapper -->

{% endblock %}
