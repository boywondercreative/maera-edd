<nav class="top-bar">
	<section class="left-small">
		<a id="nav-toggle" class="left-off-canvas-toggle" href="#" ><span></span></a>
	</section>

	<section class="right top-bar-section">
		<ul class="right">
			{% for item in menu.primary.items %}
			{% if item.get_children %}
			<li id="menu-item-{{item.ID}}" class="has-dropdown menu-item menu-item-type-{{item.type}} menu-item-object-{{item.object}} menu-item-{{item.ID}}"><a href="#">{{ item.title }} <b class="caret"></b></a>
				<ul class="dropdown">
					{% for child in item.get_children %}
					{% if child.get_children %}
					<li id="menu-item-{{child.ID}}" class="has-dropdown menu-item menu-item-type-{{child.type}} menu-item-object-{{child.object}} menu-item-{{child.ID}}"><a href="#"{{ child.title }} <b class="caret"></b></a>
						<ul class="dropdown">
							{% for grant_child in child.get_children %}
							<li id="menu-item-{{grant_child.ID}}" class="menu-item menu-item-type-{{grant_child.type}} menu-item-object-{{grant_child.object}} menu-item-{{grant_child.ID}}">
								<a href="{{ grant_child.get_path }}">{{ grant_child.title }}</a>
							</li>
							{% endfor %}
						</ul>
					</li>
					{% else %}
					<li id="menu-item-{{child.ID}}" class="menu-item menu-item-type-{{child.type}} menu-item-object-{{child.object}} menu-item-{{child.ID}}">
						<a href="{{ child.get_path }}">{{ child.title }}</a>
					</li>
					{% endif %}
					{% endfor %}
				</ul>
			</li>
			{% else %}
			<li id="menu-item-{{item.ID}}" class="menu-item menu-item-type-{{item.type}} menu-item-object-{{item.object}} menu-item-{{item.ID}}">
				<a href="{{item.link}}">{{ item.title }}</a>
			</li>
			{% endif %}
			{% endfor %}
		</ul>
	</section>

</nav>
{% include 'menu-offcanvas.twig' %}
