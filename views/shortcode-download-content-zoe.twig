{% set width  = content_width // columns %}
{% set height = width // 1.618 %}

<div id="post-{{ post.ID }}" {{ function('post_class', download_classes) }}>

	{% if post.thumbnail %}<img src="{{ post.thumbnail.src|resize( width, height ) }}">
	{% else %}<img src="{{ default_image.src|resize( width, height, 'center' ) }}">{% endif %}

	<div class="content">
		<h5 class="title clearfix">{{ post.title }}</h5>
		<p class="icon-links">
			{% if post.edd_coming_soon %}
				<a class="[maera_button_default_small] {{ theme_mods.checkout_color }} radius" title="{{ __( 'Details', 'maera_edd' ) }} {{ post.title }}" href="{{ post.link }}">
					{% if post.edd_coming_soon_text %}{{ post.edd_coming_soon_text }}
					{% else %}{{ __('Coming Soon', 'maera_edd') }}{% endif %}
				</a>
			{% else %}
				{% if variable_priced %}
					<a class="[maera_button_default_small] {{ theme_mods.checkout_color }} radius" title="{{ __( 'Details', 'maera_edd' ) }} {{ post.title }}" href="{{ post.link }}">{{ __('Details', 'maera_edd') }}</a>
				{% else %}
					{{ function('edd_get_purchase_link', [{'id':post.ID}]) }}
				{% endif %}
			{% endif %}
		</p>
		<div itemprop="description">
		  {{ post.get_preview(12|apply_filters(excerpt_length)) }}
		</div>
	</div>

</div>
